<h1><%= @project.name %></h1>
<h3>By: <%= @project.user.name %></h3>

<p>Written in: <%= @project.language %></p>
<p>Repo URL: <%= link_to @project.url %></p>

<%= deleteable?(@project) %>

<p><%= @project.description %></p>

<%= render partial: "comments/comments", locals: {comments: @project.comments} %>
<%#= render partial: "comments/form" %>

<%= form_for ([@project, @project.comments.new]) do |f| %>
    <%= f.hidden_field :commenter_id, value: current_user.commenter.id %>
    <%= f.hidden_field :project_id, value: params[:id] %>
    <%= f.text_area :content %>
    <%= f.submit 'Post Comment' %>
<% end %>
